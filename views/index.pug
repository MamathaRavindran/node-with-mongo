extends layout

block content
  .nav
     .nav-wrapper
       ul#nav-mobile.right.hide-on-med-and-down
       li
       a(href='./getAllHeroes') All Heroes

  h1= title
  p Add #{title}
  form(action='saveData' method='get')
   .row
    .input-field.col.s6
      label(for='name') Name
      input#name.validate( type='text', name='name')
   .row
    .input-field.col.s6
      label(for='phoneNo') Phone Number
      input#phoneNo.validate( type='text', name='phoneNo')
   .row
    .input-field.col.s6
      label(for='location') location
      input#location.validate( type='text', name='location')
  

   .row
    button.btn(type='submit') Go